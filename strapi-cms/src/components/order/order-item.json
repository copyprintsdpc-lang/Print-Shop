{
  "collectionName": "components_order_order_items",
  "info": {
    "displayName": "Order Item",
    "description": "Individual items in an order"
  },
  "options": {},
  "attributes": {
    "product": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::product.product"
    },
    "variant": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::product-variant.product-variant"
    },
    "quantity": {
      "type": "integer",
      "required": true,
      "min": 1
    },
    "unitPrice": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "totalPrice": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "specifications": {
      "type": "json"
    },
    "files": {
      "type": "media",
      "multiple": true,
      "allowedTypes": ["images", "files"]
    }
  }
}
