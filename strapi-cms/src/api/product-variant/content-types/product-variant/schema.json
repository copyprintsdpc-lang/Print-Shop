{
  "kind": "collectionType",
  "collectionName": "product_variants",
  "info": {
    "singularName": "product-variant",
    "pluralName": "product-variants",
    "displayName": "Product Variant",
    "description": "Product variants with specific pricing and options"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "product": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::product.product",
      "inversedBy": "variants"
    },
    "price": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "size": {
      "type": "string"
    },
    "material": {
      "type": "string"
    },
    "finish": {
      "type": "string"
    },
    "quantity": {
      "type": "integer",
      "default": 1,
      "min": 1
    },
    "sku": {
      "type": "string",
      "unique": true
    },
    "active": {
      "type": "boolean",
      "default": true
    },
    "stock": {
      "type": "integer",
      "default": -1
    },
    "customOptions": {
      "type": "json",
      "required": false
    },
    "metadata": {
      "type": "json",
      "required": false
    }
  }
}
