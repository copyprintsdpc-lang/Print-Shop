{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": "Print shop products and services"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "shortDescription": {
      "type": "string",
      "maxLength": 200
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::category.category",
      "inversedBy": "products"
    },
    "images": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": ["images"]
    },
    "basePrice": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "pricingMethod": {
      "type": "enumeration",
      "enum": ["flat", "tier", "area"],
      "default": "flat"
    },
    "sameDayEligible": {
      "type": "boolean",
      "default": false
    },
    "sameDayCutoff": {
      "type": "time",
      "default": "14:00"
    },
    "active": {
      "type": "boolean",
      "default": true
    },
    "sortOrder": {
      "type": "integer",
      "default": 0
    },
    "variants": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::product-variant.product-variant",
      "mappedBy": "product"
    },
    "options": {
      "type": "component",
      "repeatable": true,
      "component": "product.product-option"
    },
    "pricingTiers": {
      "type": "component",
      "repeatable": true,
      "component": "product.pricing-tier"
    },
    "areaPricing": {
      "type": "component",
      "component": "product.area-pricing"
    }
  }
}
