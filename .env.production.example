# Production Environment Variables for Sri Datta Print Centre

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/sdpc_print_shop_prod?retryWrites=true&w=majority

# JWT Authentication
SDPC_JWT_SECRET=your-super-secret-jwt-key-here-production
# Optional duplicate if hosting outside Amplify
JWT_SECRET=your-super-secret-jwt-key-here-production
NEXTAUTH_SECRET=your-nextauth-secret-key-here-production

# Application URLs
NEXT_PUBLIC_APP_URL=https://app.sridattaprintcentre.com
NEXT_PUBLIC_MAIN_URL=https://sridattaprintcentre.com
NODE_ENV=production

# AWS + CloudFront Configuration (use SDPC_ prefixes on Amplify)
SDPC_AWS_REGION=us-east-1
SDPC_AWS_ACCESS_KEY_ID=your-aws-access-key
SDPC_AWS_SECRET_ACCESS_KEY=your-aws-secret-key
SDPC_S3_BUCKET_NAME=sdpcbucket
SDPC_S3_BUCKET_REGION=us-east-1
SDPC_CLOUDFRONT_DOMAIN=your-cloudfront-domain
SDPC_CLOUDFRONT_DISTRIBUTION_ID=your-distribution-id
SDPC_CLOUDFRONT_KEY_PAIR_ID=APKA...
# Paste the entire PEM on one line or escape newlines with \n
SDPC_CLOUDFRONT_PRIVATE_KEY=-----BEGIN RSA PRIVATE KEY-----\n...\n-----END RSA PRIVATE KEY-----

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
CLOUDINARY_UPLOAD_PRESET=sdpc_print_media

# Razorpay Payment Gateway
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# Email Configuration (Brevo SMTP)
BREVO_SMTP_HOST=smtp-relay.brevo.com
BREVO_SMTP_PORT=587
BREVO_SMTP_USER=your-brevo-username
BREVO_SMTP_PASS=your-brevo-password
EMAIL_FROM=copyprintsdpc@gmail.com
